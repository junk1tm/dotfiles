{
    "rules": [
        {
            "description": "CapsLock -> Escape (press) / Control (hold)",
            "manipulators": [
                {
                    "from": {
                        "key_code": "caps_lock",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_control",
                            "lazy": true
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "escape"
                        }
                    ],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "Control + HJKL -> Arrow keys",
            "manipulators": [
                {
                    "from": {
                        "key_code": "h",
                        "modifiers": {
                            "mandatory": [
                                "control"
                            ],
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_arrow"
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "j",
                        "modifiers": {
                            "mandatory": [
                                "control"
                            ],
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "down_arrow"
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "k",
                        "modifiers": {
                            "mandatory": [
                                "control"
                            ],
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "up_arrow"
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "l",
                        "modifiers": {
                            "mandatory": [
                                "control"
                            ],
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "right_arrow"
                        }
                    ],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "Input source: Left Shift -> ABC; Right Shift -> Russian",
            "manipulators": [
                {
                    "from": {
                        "key_code": "left_shift"
                    },
                    "to": [
                        {
                            "key_code": "left_shift",
                            "lazy": true
                        }
                    ],
                    "to_if_alone": [
                        {
                            "select_input_source": {
                                "language": "en"
                            }
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "right_shift"
                    },
                    "to": [
                        {
                            "key_code": "right_shift",
                            "lazy": true
                        }
                    ],
                    "to_if_alone": [
                        {
                            "select_input_source": {
                                "language": "ru"
                            }
                        }
                    ],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "Quick access: Left Command -> Alacritty; Right Command -> Alfred",
            "manipulators": [
                {
                    "from": {
                        "key_code": "left_command"
                    },
                    "to": [
                        {
                            "key_code": "left_command",
                            "lazy": true
                        }
                    ],
                    "to_if_alone": [
                        {
                            "shell_command": "/usr/local/bin/toggle_app_visibility Alacritty"
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "right_command"
                    },
                    "to": [
                        {
                            "key_code": "right_command",
                            "lazy": true
                        }
                    ],
                    "to_if_alone": [
                        {
                            "shell_command": "/usr/bin/open -a 'Alfred 5'"
                        }
                    ],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "Function keys: F6 -> Toggle dark mode",
            "manipulators": [
                {
                    "from": {
                        "key_code": "f6"
                    },
                    "to": [
                        {
                            "shell_command": "PATH=/opt/homebrew/opt/gnu-sed/libexec/gnubin:$PATH /usr/local/bin/toggle_dark_mode"
                        }
                    ],
                    "type": "basic"
                }
            ]
        }
    ]
}
